---
import AnchorIcon from "./AnchorIcon.astro";
import Anchor from "./Anchor.astro";
import EmailForm from "./EmailForm";
import Modal from "./Modal.astro";
---

<footer class="bg-[url(/img/backgrounds/bg-footer.svg)] bg-no-repeat bg-cover pt-52 text-center text-white pb-8 px-8">
    <main class="flex flex-col md:flex-row justify-between items-center text-left px-10 lg:px-18">
        <section class="flex flex-col lg:flex-row gap-1 lg:gap-5 items-center mb-5 md:mb-0">
            <img src="/img/main-icon.webp" alt="Icono del policlinico La Trinidad" class="aspect-square lg:w-32 rounded-full w-24"/>
            <section class="md:hidden lg:flex gap-2 flex flex-col md:flex-row">
                <article class="flex lg:flex-col flex-row gap-1">
                    <AnchorIcon href="https://www.facebook.com/Centromedicoparroquial/" img="/footer/facebook" alt="Página de Facebook"/>
                    <AnchorIcon href="https://www.instagram.com/policlinicotrinidad/" img="/footer/instagram" alt="Página de Instagram"/>
                </article>
                <article class="flex lg:flex-col flex-row gap-1">
                    <AnchorIcon href="" img="/footer/mail" alt="Correo electrinico del policlinico"/>
                    <AnchorIcon href="" img="/footer/whatsapp" alt="Whatsapp del policlinico"/>
                </article>
            </section>
        </section>
        <ul class="leading-loose text-sm lg:text-base lg:text-left text-center">
            <Anchor simple text="Servicios" href="/servicios" />
            <Anchor simple text="Nosotros" href="/nosotros" />
            <Anchor simple text="Contactanos" href="/contactanos" />
        </ul>
        <ul class="leading-loose text-sm lg:text-base lg:text-left text-center">
            <Anchor simple text="Preguntas frecuentes" href="./" />
            <Anchor simple text="Terminos y condiciones" href="./" />
            <Anchor simple text="Trabaja con nosotros" href="mailto:policlinicolatrinidad@gmail.com?subject=Postulacion para trabajar con el policlinico La Trinidad" />
        </ul>
        <Modal textButton="¡Pida su cita ahora!">
            <EmailForm client:visible/>
          </Modal>
    </main>
    <hr class="border-none bg-white h-1 my-8 rounded-3xl" />
    <p>Copyright © 2024 - Policlino La Trinidad</p>
</footer>
---
import SpeedInsights from "@vercel/speed-insights/astro"
import Header from "@/components/Header.astro"
import Footer from "@/components/Footer.astro"
import { ViewTransitions } from "astro:transitions"
import '@fontsource-variable/onest'
import Musica from "@/components/Musica"
interface Props {
  title: string
}
const { title } = Astro.props
---
<!DOCTYPE html>
<html lang="es">
    <head>
        <meta charset="UTF-8"/>
        <meta
        name="description"
        content="Centro medico parroquial La Trinidad, policlinico integral tanto para adultos como niños. Servicios de Salud con Especialidades Médicas con 26 años de experiencia al servicio del pueblo. Servicios de apoyo al diagnostico como Laboratorio, Electrocardiograma, Ecografias. Terapias de Lenguaje, Aprendizaje, Física. Evaluaciones en Psicología. Programa de Diabéticos e Hipertensos. Tratamiento de pie diabetico, Ulceras vericosas. Odontología. Podología. Farmacia."
        />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/png" href="/favicon.png" />
        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body>
        <Header/>
        <Musica client:load transition:persist/> <!--en optimizacion-->
        <main class="mx-2 md:mx-7 lg:mx-14">
            <slot />
        </main>
        <Footer/>
        <!-- script chatBot voiceflow -->
        <script type="text/javascript">
            document.addEventListener('astro:page-load', () => {
                (function(d, t) {
                var v = d.createElement(t), s = d.getElementsByTagName(t)[0];
                v.onload = function() {
                    window.voiceflow.chat.load({
                    verify: { projectID: '668c93bf0516aafbf77ce850' },
                    url: 'https://general-runtime.voiceflow.com',
                    versionID: '668c93bf0516aafbf77ce851'
                    });
                }
                v.src = "https://cdn.voiceflow.com/widget/bundle.mjs"; v.type = "text/javascript"; s.parentNode.insertBefore(v, s);
            })(document, 'script');
            })
        </script>
        <SpeedInsights />
    </body>
</html>

<!-- Estilos globales -->
<style is:global>
    body {
        font-family: 'Onest Variable',Verdana, Tahoma, system-ui;
    }
    /* ::-webkit-scrollbar {
        display: none;
    } */
    p{
        color: #acf1bd;
        text-wrap: pretty;
        line-height: 1.625;
    }
</style>